	stack:	equ h8000
	

	org h8000

	fn:	dw 5
	res:	dw 0

	org 0

	mov #stack, r6
	clr r0
	mov fn, -(r6)
	jsr r7, Fat
	add #2, r6
	hlt

Fat:
	mov 2(r6), r0
	mov r0, r1
	dec r1
LFat:
	mov r0, -(r6)
	mov r1, -(r6)
	cmp r1, #1
	beq RetFat
	jsr r7, Mul
	mov (r6)+, r1
	add #2, r6
	dec r1
	br LFat
RetFat:	
	mov 2(r6), res
	add #4, r6
	rts r7
	

Mul:
	clr r0
	mov 4(r6), r1
	mov 2(r6), r2

MLoop:
	asr r2
	bcs Sum
	asl r1
	tst r2
	bne MLoop
	rts r7
Sum:
	add r1, r0
	asl r1
	br, MLoop	
	rts r7
